<Window x:Class="FabricationSample.ColumnMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map CSV Columns"
        Height="600" Width="700"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border x:Name="border_1"
            BorderBrush="#FF0078D7"
            BorderThickness="1"
            Background="#FF2D2D30"
            CornerRadius="5">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0">
                <Label Content="Map CSV Columns to Import Fields"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                <Image Source="/Resources/closePanelActive.png"
                       Width="16" Height="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"
                       MouseLeftButtonDown="CloseImage_MouseLeftButtonDown"
                       Cursor="Hand"/>
            </Grid>

            <!-- Instructions -->
            <TextBlock Grid.Row="1"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Margin="5,5,5,10"
                       Text="Map each import field to a column from your CSV file. Fields marked with * are required."/>

            <!-- Data Preview -->
            <Border Grid.Row="2"
                    BorderBrush="#FF3F3F46"
                    BorderThickness="1"
                    Margin="0,0,0,5">
                <StackPanel>
                    <DockPanel Margin="5,2,5,2">
                        <Label x:Name="lblPreview" Content="Data Preview"
                               Foreground="White"
                               FontSize="11"
                               FontWeight="SemiBold"
                               DockPanel.Dock="Left"
                               Padding="0,3"/>
                        <CheckBox x:Name="chkHasHeaders"
                                  Content="My data has headers"
                                  Foreground="#FFCCCCCC"
                                  FontSize="11"
                                  VerticalAlignment="Center"
                                  DockPanel.Dock="Right"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,5,0"
                                  IsChecked="True"
                                  Checked="chkHasHeaders_Changed"
                                  Unchecked="chkHasHeaders_Changed"/>
                    </DockPanel>
                    <DataGrid x:Name="dgPreview"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              MaxHeight="300"
                              Background="#FF1E1E1E"
                              Foreground="White"
                              RowBackground="#FF2D2D30"
                              AlternatingRowBackground="#FF353535"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              ScrollViewer.CanContentScroll="True">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF3F3F46"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="5,3"/>
                                <Setter Property="BorderBrush" Value="#FF555555"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Column Mapping List -->
            <Border Grid.Row="3"
                    BorderBrush="#FF3F3F46"
                    BorderThickness="1"
                    Margin="0,0,0,5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="mappingsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding DisplayLabel}"
                                               Foreground="White"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRequired}" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <CheckBox Grid.Column="1"
                                              Content="Skip"
                                              Foreground="#FFAAAAAA"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding IsSkipped, Mode=TwoWay}"
                                              Checked="SkipCheckBox_Changed"
                                              Unchecked="SkipCheckBox_Changed">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRequired}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                    <TextBlock Grid.Column="2"
                                               Text="&#x2192;"
                                               Foreground="#FF888888"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="14"/>
                                    <ComboBox Grid.Column="3"
                                              ItemsSource="{Binding DataContext.CsvColumnOptions,
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding SelectedCsvColumn, Mode=TwoWay}"
                                              IsEnabled="{Binding IsComboEnabled}"
                                              Height="25"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4"
                       Orientation="Horizontal"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                <Button x:Name="btnAutoMap"
                        Content="Auto-Map"
                        Width="100" Height="35"
                        Margin="0,0,10,0"
                        Click="btnAutoMap_Click"
                        ToolTip="Attempt to match fields by similar column names"/>
                <Button x:Name="btnOk"
                        Content="Continue"
                        Width="100" Height="35"
                        Margin="0,0,10,0"
                        Click="btnOk_Click"/>
                <Button x:Name="btnCancel"
                        Content="Cancel"
                        Width="80" Height="35"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
