<Window x:Class="FabricationSample.ExportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Preview"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border x:Name="border_1"
            BorderBrush="#FF0078D7"
            BorderThickness="1"
            Background="#FF2D2D30"
            CornerRadius="5">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0">
                <Label x:Name="WindowTitle"
                       Content="Export Preview"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                <Image x:Name="CloseImage"
                       Source="/Resources/closePanelActive.png"
                       Width="16" Height="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"
                       MouseLeftButtonDown="CloseImage_MouseLeftButtonDown"
                       Cursor="Hand"/>
            </Grid>

            <!-- Info Bar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,0,0,5">
                <TextBlock x:Name="txtExportInfo" Foreground="#CCCCCC" FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Scrollable Data Grid -->
            <Border Grid.Row="2" BorderBrush="#FF3F3F46" BorderThickness="1" Margin="0,5">
                <DataGrid x:Name="dgPreview"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          Background="#FF1E1E1E"
                          Foreground="White"
                          RowBackground="#FF2D2D30"
                          AlternatingRowBackground="#FF353535"
                          BorderThickness="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          FontSize="12">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF3D3D3D"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="BorderBrush" Value="#FF555555"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="6,3"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF264F78"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3"
                       Orientation="Horizontal"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                <Button x:Name="btnSaveAs"
                        Content="Save As..."
                        Width="120" Height="35"
                        Margin="0,0,10,0"
                        Click="btnSaveAs_Click"/>
                <Button x:Name="btnCancel"
                        Content="Cancel"
                        Width="80" Height="35"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
