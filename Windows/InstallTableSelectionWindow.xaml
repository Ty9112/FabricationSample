<Window x:Class="FabricationSample.InstallTableSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Installation Tables to Export"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border x:Name="border_1"
            BorderBrush="#FF0078D7"
            BorderThickness="1"
            Background="#FF2D2D30"
            CornerRadius="5">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0">
                <Label x:Name="WindowTitle"
                       Content="Select Installation Tables to Export"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                <Image x:Name="CloseImage"
                       Source="/Resources/closePanelActive.png"
                       Width="16" Height="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"
                       MouseLeftButtonDown="CloseImage_MouseLeftButtonDown"
                       Cursor="Hand"/>
            </Grid>

            <!-- Select All / Deselect All Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                <Button x:Name="btnSelectAll"
                        Content="Select All"
                        Width="100" Height="30"
                        Margin="0,0,10,0"
                        Click="btnSelectAll_Click"/>
                <Button x:Name="btnDeselectAll"
                        Content="Deselect All"
                        Width="100" Height="30"
                        Click="btnDeselectAll_Click"/>
                <TextBlock x:Name="txtSelectedCount"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           Text="0 installation tables selected"/>
            </StackPanel>

            <!-- Installation Tables List -->
            <Border Grid.Row="2"
                    BorderBrush="#FF3F3F46"
                    BorderThickness="1"
                    Margin="0,5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="installTablesListBox">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding DisplayName}"
                                         IsChecked="{Binding IsSelected}"
                                         Foreground="White"
                                         Margin="5"
                                         Checked="InstallTable_CheckedChanged"
                                         Unchecked="InstallTable_CheckedChanged"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3"
                       Orientation="Horizontal"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                <Button x:Name="btnOk"
                        Content="Export Selected"
                        Width="120" Height="35"
                        Margin="0,0,10,0"
                        Click="btnOk_Click"/>
                <Button x:Name="btnCancel"
                        Content="Cancel"
                        Width="80" Height="35"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
